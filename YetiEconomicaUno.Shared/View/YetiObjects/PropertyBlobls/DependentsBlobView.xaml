<local:BaseBlobView
    x:Class="YetiEconomicaUno.View.YetiObjects.PropertyBlobls.DependentsBlobView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YetiEconomicaUno.View.YetiObjects" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:flyouts="using:YetiEconomicaUno.View.Flyouts"
    mc:Ignorable="d">
    <Button.ContextFlyout>
        <flyouts:FlyoutWithBtn Label="Remove"
                               Icon="Remove"
                               Opened="Flyout_OnOpened" 
                               Closing="Flyout_OnClosing">
            <StackPanel Orientation="Horizontal" Spacing="5">
	            <local:YetiObjectSelector x:Name="RequredBox"
	                                      HorizontalAlignment="Left"
	                                      Mask="RequiredInDependencies"
	                                      Header="Required"/>
	            <local:YetiObjectSelector x:Name="VisibleBox"
	                                      HorizontalAlignment="Left"
	                                      Mask="RequiredInDependencies"
	                                      Header="Visibility after"/>
            </StackPanel>
        </flyouts:FlyoutWithBtn>
    </Button.ContextFlyout>
	<TextBlock x:Name="InfoBox" />
</local:BaseBlobView>
